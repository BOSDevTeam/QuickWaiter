<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerListActivity"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent">
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="right">

        <EditText android:id="@+id/etSearch"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Search by Table"
            android:textSize="16sp"
            android:textColor="@color/colorSoftBlack"
            android:background="@color/colorGray"
            android:padding="10dp"
            android:inputType="text"
            android:imeOptions="actionDone"/>

        <Button android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_red"
            android:padding="10dp"
            android:layout_marginLeft="5dp"/>

        <ImageButton android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gray"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_refresh"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/colorGray">

            <TextView android:id="@+id/tvHeaderTable"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Table"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:textSize="16sp"
                android:textColor="@color/colorSoftBlack"/>

            <TextView android:id="@+id/tvHeaderDate"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/colorSoftBlack"
                android:text="Date" />

            <TextView android:id="@+id/tvHeaderTime"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/colorSoftBlack"
                android:text="Time" />

            <TextView android:id="@+id/tvHeaderMan"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textColor="@color/colorSoftBlack"
                android:text="Man" />

            <TextView android:id="@+id/tvHeaderWomen"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textColor="@color/colorSoftBlack"
                android:text="Women" />

            <TextView android:id="@+id/tvHeaderChild"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textColor="@color/colorSoftBlack"
                android:text="Child"
                android:layout_marginRight="70dp"/>

            <TextView android:id="@+id/tvHeaderTotal"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textColor="@color/colorSoftBlack"
            android:text="Customer"
            android:layout_marginRight="70dp"/>

    </LinearLayout>

    <ListView android:id="@+id/lvCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
