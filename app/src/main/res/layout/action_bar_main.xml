<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/tvShopName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Shop Name"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"/>

    <TextView android:id="@+id/tvPrinterMessage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_toLeftOf="@+id/btnConnect"
        android:visibility="gone"/>

    <Button android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="Connect"
        android:background="@drawable/button_red"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/btnCustomerList"
        android:visibility="gone"/>

    <ImageButton android:id="@+id/btnCustomerList"
        android:src="@mipmap/people_edit"
        android:layout_toLeftOf="@+id/btnCustomerEntry"
        style="@style/styleMainActionBarButton"/>

    <ImageButton android:id="@+id/btnCustomerEntry"
        android:src="@mipmap/people"
        android:layout_toLeftOf="@+id/btnBooking"
        style="@style/styleMainActionBarButton"/>

    <ImageButton android:id="@+id/btnBooking"
        android:src="@mipmap/booking"
        style="@style/styleMainActionBarButton"
        android:layout_toLeftOf="@+id/btnRefresh"/>

    <ImageButton android:id="@+id/btnRefresh"
        android:src="@mipmap/refresh"
        android:layout_toLeftOf="@+id/btnDiscount"
        style="@style/styleMainActionBarButton"/>

    <ImageButton android:id="@+id/btnDiscount"
        android:src="@mipmap/discount"
        android:layout_toLeftOf="@+id/btnViewOrder"
        style="@style/styleMainActionBarButton"/>

    <ImageButton android:id="@+id/btnViewOrder"
        android:src="@mipmap/view_order"
        android:layout_toLeftOf="@+id/btnGetBill"
        style="@style/styleMainActionBarButton"/>

    <ImageButton android:id="@+id/btnGetBill"
        android:src="@mipmap/get_bill"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        style="@style/styleMainActionBarButton"/>

</RelativeLayout>