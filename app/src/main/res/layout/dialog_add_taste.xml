<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText  android:id="@+id/etTaste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/colorSoftBlack"
        android:textStyle="bold"
        android:hint="Taste"
        android:textColorHint="@color/colorGray"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <LinearLayout style="@style/styleOkCancelButtonLayout">

        <Button android:id="@+id/btnAdd"
            style="@style/styleOkButton"
            android:text="@string/add"/>

        <View style="@style/styleOkCancelButtonDivider"/>

        <Button android:id="@+id/btnCancel"
            style="@style/styleCancelButton"/>
    </LinearLayout>
</LinearLayout>