<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Shop Name"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"/>

    <Button android:id="@+id/btnRequestBill"
        android:text="@string/request_bill"
        android:layout_toLeftOf="@+id/divider"
        style="@style/styleMainActionBarButton"
        android:textColor="@color/colorWhite"/>

    <View android:id="@+id/divider"
        style="@style/VerticalDivider"
        android:layout_toLeftOf="@+id/btnGetBill"
        android:background="#403F3F"/>

    <ImageButton android:id="@+id/btnGetBill"
        android:src="@mipmap/get_bill"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        style="@style/styleMainActionBarButton"/>

</RelativeLayout>